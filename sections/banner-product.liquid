{% schema %}
{
  "name": "Banner Product",
  "blocks": [
    {
      "type": "product_block",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Banner Product",
      "blocks": [
        { "type": "product_block" }
      ]
    }
  ]
}
{% endschema %}

{{ 'banner-product.css' | asset_url | stylesheet_tag }}

<section class="banner-products" id="bannerProducts">
    <div class="banner-products__thumbnails">
        {% for block in section.blocks %}
            {% assign product = all_products[block.settings.product] %}
            {% if product %}
                <img
                        src="{{ product.featured_image | img_url: '150x150' }}"
                        alt="{{ product.title }}"
                        class="product-thumb {% if forloop.first %}active{% endif %}"
                        data-product="{{ block.id }}">
            {% endif %}
        {% endfor %}
    </div>

    <div class="banner-products__content">
        {% for block in section.blocks %}
            {% assign product = all_products[block.settings.product] %}
            {% if product %}
                <div class="banner-product-content {% if forloop.first %}active{% endif %}" data-product="{{ block.id }}">
                    <div class="banner-product__main">
                        <img src="{{ product.featured_image | img_url: '800x800' }}" alt="{{ product.title }}">
                    </div>

                    <div class="banner-product__details">
                        <h1 class="banner-product__title">{{ product.title }}</h1>
                        <p class="banner-product__price">{{ product.variants.first.price | money }}</p>

                        {% if product.variants.size > 1 %}
                            <div class="banner-product__sizes">
                                <h3>Select Size:</h3>
                                <div class="sizes">
                                    {% for variant in product.variants %}
                                        <button type="button"
                                                data-variant="{{ variant.id }}"
                                                data-price="{{ variant.price }}"
                                                data-image="{{ variant.featured_image | img_url: '800x800' }}"
                                                {% if forloop.first %}class="active"{% endif %}>
                                            {{ variant.title }}
                                        </button>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}

                        <form method="post" action="/cart/add">
                            <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                            <button type="submit" class="btn">Add To Bag</button>
                        </form>

                        <p class="banner-product__desc">{{ product.description | strip_html | truncate: 200 }}</p>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const thumbs = document.querySelectorAll('.product-thumb');

        // Зберігаємо базові зображення
        document.querySelectorAll('.banner-product-content').forEach(block => {
            const mainImg = block.querySelector('.banner-product__main img');
            mainImg.dataset.baseImage = mainImg.src;
        });

        // Перемикання між товарами
        thumbs.forEach(thumb => {
            thumb.addEventListener('click', () => {
                document.querySelector('.product-thumb.active')?.classList.remove('active');
                document.querySelector('.banner-product-content.active')?.classList.remove('active');

                thumb.classList.add('active');
                const productId = thumb.dataset.product;
                const contentBlock = document.querySelector(`.banner-product-content[data-product="${productId}"]`);
                contentBlock.classList.add('active');

                // Активуємо перший варіант товару
                const firstVariantBtn = contentBlock.querySelector('.banner-product__sizes button');
                if(firstVariantBtn){
                    firstVariantBtn.click();
                } else {
                    // Якщо варіантів нема – відновлюємо базове зображення
                    const mainImg = contentBlock.querySelector('.banner-product__main img');
                    mainImg.src = mainImg.dataset.baseImage;
                }
            });
        });

        // Event delegation для кнопок розмірів
        document.querySelector('.banner-products__content').addEventListener('click', function(e){
            if(e.target.matches('.banner-product__sizes button')){
                const btn = e.target;

                // Активний клас
                btn.closest('.sizes').querySelector('button.active')?.classList.remove('active');
                btn.classList.add('active');

                const contentBlock = btn.closest('.banner-product-content');

                // Оновлення input форми
                const formInput = contentBlock.querySelector('form input[name="id"]');
                formInput.value = btn.dataset.variant;

                // Оновлення ціни
                const priceElem = contentBlock.querySelector('.banner-product__price');
                const price = parseInt(btn.dataset.price, 10); // ціна в копійках
                priceElem.textContent = Shopify.formatMoney(price); // formatMoney очікує копійки

                // Оновлення зображення
                const mainImg = contentBlock.querySelector('.banner-product__main img');
                mainImg.src = btn.dataset.image || mainImg.dataset.baseImage;
            }
        });

        // Ініціалізуємо перший товар при завантаженні сторінки
        const firstThumb = document.querySelector('.product-thumb');
        if(firstThumb) firstThumb.click();

        function adjustThumbnailsHeight() {
            const mainImage = document.querySelector('.banner-product__main img');
            const thumbs = document.querySelector('.banner-products__thumbnails');

            if(mainImage && thumbs){
                thumbs.style.maxHeight = mainImage.clientHeight + "px";
            }
        }

        // Виклик при завантаженні
        adjustThumbnailsHeight();

        // І при ресайзі
        window.addEventListener('resize', adjustThumbnailsHeight);
    });
</script>
