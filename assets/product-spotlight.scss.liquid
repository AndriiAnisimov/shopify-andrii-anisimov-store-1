.product-spotlight {
  display: flex;
  gap: 2rem;
  padding: 2rem;

  &__gallery {
    display: flex;
    gap: 1rem;

    .product-spotlight__thumbnails {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;

      .thumb {
        border: 2px solid transparent;
        padding: 4px;
        background: none;
        cursor: pointer;

        &.active {
          border-color: black;
        }

        img {
          width: 60px;
          border-radius: 8px;
        }
      }
    }

    .product-spotlight__image img {
      width: 400px;
      border-radius: 12px;
    }
  }

  &__details {
    flex: 1;

    &__tag {
      background: #f5f5f5;
      padding: 0.2rem 0.6rem;
      border-radius: 6px;
      font-size: 0.9rem;
      display: inline-block;
      margin-bottom: 0.5rem;
    }

    &__title {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }

    &__price {
      font-size: 1.4rem;
      margin-bottom: 1rem;
      font-weight: bold;
    }

    .sizes {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 1rem;

      button {
        padding: 0.5rem 1rem;
        border: 1px solid #ccc;
        border-radius: 6px;
        cursor: pointer;
        background: white;

        &.active {
          border-color: black;
          background: #f2f2f2;
        }
      }
    }

    .btn {
      background: black;
      color: white;
      border: none;
      padding: 1rem 2rem;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      margin-bottom: 1rem;

      &:hover {
        opacity: 0.9;
      }
    }

    &__desc {
      font-size: 0.95rem;
      line-height: 1.4;
      color: #555;
    }
  }
}
